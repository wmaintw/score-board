<div class="container">
  <div class="jumbotron">
    <img src="assets/tw-logo.png" alt="Security Challenge" height="25" />
    <h1>Security Challenge</h1>
    <div class="clearfix"></div>
  </div>

<h2>Submit Your Answer</h2>

<div class="row">
    <%= form_tag('/score') do -%>
      <div class="form-group">
        <label for="your_name" class="col-md-2 control-label">Your name: </label>
        <div class="col-md-10">
          <%= text_field_tag("your_name",nil, maxlength: 20, size: 20) %>
        </div>
      </div>
      <div class="form-group">
        <label for="answer_token" class="col-md-2 control-label">Answer Token: </label>
        <div class="col-md-10">
            <%= text_field_tag("answer_token", nil, maxlength: 20, size: 20) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= submit_tag("Submit") %>
        </div>
      </div>
    <% end -%>
</div>
<h2>Score Board</h2>

<table class="table table-bordered">
  <tr>
    <%(0..@challenge_count_max-1).each do |i|%>
    <th><%=@challenges[i].title%></th>
    <%end %>
  </tr>

  <tr>
    <%(0..@challenge_count_max-1).each do |j|%>
        <td>
          <ul>
            <%@scores[j].each do |score|%>
              <li><%=score.user_name%></li>
            <%end %>
          </ul>
        </td>
    <%end %>
  </tr>

</table>

<br />
</div>